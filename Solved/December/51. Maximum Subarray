# Kadanes algo
# simply be solved by sliding window, keep expanding right adding the next number 
#until you get negative. then at that point if negative you start the new window after the negative number.
#record that as the new starting point


class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        max_sum = nums[0]
        current_sum = nums[0]

        for i in range(1, len(nums)):
            # start new window if current_sum is negative
            if current_sum < 0:
                current_sum = nums[i]
            else:
                current_sum += nums[i]

            # update max_sum
            if current_sum > max_sum:
                max_sum = current_sum             
                
        return max_sum


    # another neetcode solution

    class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        n, res = len(nums), nums[0]
        for i in range(n):
            cur = 0
            for j in range(i, n):
                cur += nums[j]
                res = max(res, cur)
        return res
